<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Профиль @ViewBag.Username</title>
    <link rel="stylesheet" href="~/css/Style.css" />
    <link rel="stylesheet" media="all and (orientation:portrait)" href="~/css/Mobile.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/profile.js"></script>

</head>
<body>
    <header>
        <a id="label-logo" href="/" style="text-decoration: none;">Learncards</a>

        <div id="img-account">
            <img a src="~/images/account.svg" id="img-account-icon" />
            <div id="account-menu" style="display: none">
                <div id="account-button" class="account-menu-item">аккаунт</div>
                <div id="analytics-button" class="account-menu-item">аналитика</div>
                <div id="students-button" class="account-menu-item">чужая аналитика</div>
                <div id="teachers-button" class="account-menu-item">доступ к моей аналитике</div>
            </div>
        </div>
    </header>


    @if (ViewBag.Exist)
    {
        <div class="wrapper" @*style="display: none" *@>
            <div id="decklist" class="decklist">
                <div id="profile-title-wrapper">
                    <div id="profile-title">@ViewBag.Username</div>
                    @if (ViewBag.CanBecomeStudent)
                    {
                        @if (!ViewBag.AlreadyAStudent)
                        {
                            <div id="become-student-button">Предоставить доступ</div>
                            <div id="stop-being-a-student-button" style="display: none">Прервать доступ</div>
                        }
                        else
                        {
                            <div id="become-student-button" style="display: none">Предоставить доступ</div>
                            <div id="stop-being-a-student-button">Прервать доступ</div>
                        }
                    }

                </div>
                <div id="decks-table" class="gridbox"></div>
                <div class="no-decks-message" style="display:none">Нет публичных колод</div>
            </div>
        </div>
    }
    else
    {
        <div class="wrapper">
            <div id="wrap-profile" class="decklist">
                <div class="no-decks-message">Пользователь не существует</div>
            </div>
        </div>
    }


</body>
</html>
